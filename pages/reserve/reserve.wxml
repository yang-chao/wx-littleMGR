<!--pages/reserve/reserve.wxml-->
<view class='tr'>
  <!-- 时间 -->
  <view class='tc'>
    <view class='t_item'></view>
    <view wx:for="{{timeList}}">
      <view class='t_item'>{{item}}</view>
    </view>
  </view>

  <!-- 排班 -->
  <block wx:for="{{arrange}}">
    <view class='tc'>
      <view class='t_item'>{{item.name}}</view>
      <block wx:for="{{item.schedule}}" wx:for-item="schedule">
        <view class='t_item'>
          <view wx:if="{{index == schedule.timeIndex}}" data-schedule="{{schedule}}" bindtap='openSchedule'>{{schedule.cd}}</view>
        </view>
      </block>
    </view>
  </block>
</view>
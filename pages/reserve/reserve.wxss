/* pages/reserve/reserve.wxss */

.tr {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.tc {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.t_item {
  height: 80rpx;
  width: 150rpx;
  vertical-align: middle;
  display: table-cell;
  text-align: center;
  border-right: 0.5rpx #ddd solid;
  border-bottom: 0.5rpx #ddd solid;
  font-size: 26rpx;
}

.item_disable {
  background-color: #f7f7f7;
}

.item_enable {
  background-color: #1aac19;
  color: #fff;
}

.t_slot {
  height: 80rpx;
  width: 150rpx;
  vertical-align: middle;
  display: table-cell;
  text-align: center;
  border-right: 0.5rpx #ddd solid;
  border-bottom: 0.5rpx #ddd solid;
  font-size: 26rpx;
}

.t_ft {
  font-size: 30rpx;
  text-align: center;
  vertical-align: middle;
}

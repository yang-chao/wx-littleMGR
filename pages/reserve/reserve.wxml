<!--pages/reserve/reserve.wxml-->
<scroll-view scroll-x>
  <view class='tr'>
    <!-- 时间 -->
    <view class='tc'>
      <view class='t_item'></view>
      <view wx:for="{{slotList}}">
        <view class='t_slot'>{{item}}</view>
      </view>
    </view>

    <!-- 排班 -->
    <block wx:for="{{arrange}}">
      <view class='tc'>
        <view class='t_item'>
          <text class='t_ft'>{{item.name}}</text>
        </view>
        <block wx:for="{{item.schedule}}" wx:for-item="schedule">
          <view class='t_item'>
            <view class='t_item item_enable' wx:if="{{schedule.slotIndex >= -1}}" data-ft="{{item.name}}" data-index="{{index}}" data-schedule="{{schedule}}" bindtap='openSchedule'>{{schedule.cd}}</view>
            <view class='t_item item_disable' wx:else></view>
          </view>
        </block>
      </view>
    </block>

  </view>
</scroll-view>